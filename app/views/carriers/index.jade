extends ../layouts/main

append vendorStyles
  link(href="/components/bootstrap-table/dist/bootstrap-table.min.css" rel="stylesheet")

append vendorScripts
  script(src="/components/bootstrap-table/dist/bootstrap-table.min.js")

block body
  .container
    h3.page-header= title
    table(data-toggle="table" data-height="550" data-pagination="true" data-page-list="[10, 20, 50, 100, 200]" data-search="true" data-show-columns="true" data-show-refresh="false" data-show-toggle="false" data-click-to-select="false" data-maintain-selected="true")
      thead
        tr
          th(data-checkbox="true")
          th(data-sortable="true") Carrier Name
          th(data-sortable="true") Claims Address
      tbody
        each carrier in carriers
          tr
            td
            td
              a(href="/carriers/"+carrier.name)= carrier.name
            td= carrier.addresses
