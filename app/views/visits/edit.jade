extends ../layouts/main

block body
  .container
    h3= title
    br
    form.form-horizontal
      fieldset
        .panel.panel-default.row
            .panel-body
              .col-xs-6
                p Insert line item details here.

              .col-xs-6
                .form-group
                  label.control-label.col-xs-5 Collection Comment
                  .col-xs-7
                    textarea.form-control(id="collectionComment" rows="3" autofocus)
                .form-group
                  label.control-label.col-xs-5 Work type
                  .col-xs-7
                    select.form-control
                      option(selected) Review
                      option Online
                      option Call
                .form-group
                  label.control-label.col-xs-5 Claim number
                  .col-xs-7
                    input.form-control(type="text" id="claimNumber")
                .form-group
                  label.control-label.col-xs-5 EOB date
                  .col-xs-7
                    input.form-control(type="date" max="today" id="eobDate")
                .form-group
                  label.control-label.col-xs-5 Check&thinsp;/&thinsp;EFT number
                  .col-xs-7
                    input.form-control(type="text" id="checkNumber")
                .form-group
                  label.control-label.col-xs-5 Check&thinsp;/&thinsp;EFT date
                  .col-xs-7
                    input.form-control(type="date" min="2010-01-02" id="checkDate")
                .form-group
                  label.control-label.col-xs-5 Group number
                  .col-xs-7
                    input.form-control(type="text" placeholder="")
                .form-group
                  label.control-label.col-xs-5 Next follow-up date
                  .col-xs-7
                    input.form-control(type="date" min="today" max="3000-01-01")
        .form-group.pull-right

          button.btn.btn-default(type="submit") Save

          button.btn.btn-default(type="button" data-toggle="modal" data-target="#generateComment" onclick="generateComment()") Generate Comment

          .modal.fade(id="generateComment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
            .modal-dialog.modal-sm
              .modal-content
                .modal-header
                  button.close(type="button" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") &times
                  h4.modal-title(id="myModalLabel") Generated Comment for Visit #{visitNumber}
                .modal-body
                .modal-footer
                  button.btn.btn-default(type="button" data-dismiss="modal") Close
